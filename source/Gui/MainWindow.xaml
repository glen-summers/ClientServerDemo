<Window x:Class="Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gui"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
	<Window.DataContext>
		<local:MainWindowViewModel/>
	</Window.DataContext>

	<StackPanel>
		<TextBox Text ="{Binding Host}"/>
		<TextBox Text ="{Binding Context}"/>
		<Button Content="Submit" Command="{Binding SubmitCommand}"/>
		<Button Content="Query" Command="{Binding QueryCommand}"/>
		
		<ContentControl Content="{Binding Result}">
			<ContentControl.Resources>
				<DataTemplate DataType="{x:Type local:QueryResult}">
					<ListBox ItemsSource="{Binding Result}"></ListBox>
				</DataTemplate>
			</ContentControl.Resources>
		</ContentControl>
	</StackPanel>
</Window>
